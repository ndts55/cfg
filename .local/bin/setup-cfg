#!/bin/bash

ensure_exists() {
  which $1 || (
    echo "Please install $1"
    exit 1
  )
}

for program in stow git pip; do ensure_exists $program; done

pip install neovim-remote
cfg_dir="$HOME"/.cfg
git clone git@github.com:ndts55/cfg.git "$cfg_dir"
cd "$cfg_dir" || exit
stow --adopt .

git status
