#!/bin/bash

while read -r line; do
  echo "$line"
  if [ "$line" == "color-scheme: 'default'" ]; then
    echo "LIGHT MODE"
    # tmux source-file ~/.config/tmux/themes/light.conf
    "$HOME"/.local/bin/sync-tmux-theme light
  else
    echo "DARK MODE"
    # tmux source-file ~/.config/tmux/themes/dark.conf
    "$HOME"/.local/bin/sync-tmux-theme dark
  fi
done < <(gsettings monitor org.gnome.desktop.interface color-scheme)
